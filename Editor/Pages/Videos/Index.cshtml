@page
@model Editor.Pages_Videos.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Video[0].YouTubeVideoId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Video[0].YouTubePlaylistId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Video[0].MessageStartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Video[0].Message)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Video) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.YouTubeVideoId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YouTubePlaylistId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MessageStartTimeString)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message.Description)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
