@page
@model Editor.Pages_Videos.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Video</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Video.YouTubeVideoId" class="control-label"></label>
                <input asp-for="Video.YouTubeVideoId" class="form-control" />
                <span asp-validation-for="Video.YouTubeVideoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Video.YouTubePlaylistId" class="control-label"></label>
                <input asp-for="Video.YouTubePlaylistId" class="form-control" />
                <span asp-validation-for="Video.YouTubePlaylistId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Video.MessageStartTime" class="control-label"></label>
                <input asp-for="Video.MessageStartTimeString" class="form-control" />
                <span asp-validation-for="Video.MessageStartTimeString" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Video.MessageId" class="control-label"></label>
                <select asp-for="Video.MessageId" class ="form-control" asp-items="ViewBag.MessageId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

