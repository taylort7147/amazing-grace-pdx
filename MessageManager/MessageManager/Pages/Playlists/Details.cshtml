@page
@model MessageManager.Pages.Playlists.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Playlist</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Playlist.YouTubePlaylistId)
        </dt>
        <dd class="col-sm-10">
            <a class="btn btn-light" href="https://www.youtube.com/playlist?list=@Model.Playlist.YouTubePlaylistId"
                role="button">@Model.Playlist.YouTubePlaylistId</a>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Playlist.Series)
        </dt>
        <dd class="col-sm-10">
            <a class="btn btn-light" asp-page="/Series/Details" asp-route-id="@Model.Playlist.SeriesId"
                role="button">@Model.Playlist.Series.Name</a>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Playlist.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
