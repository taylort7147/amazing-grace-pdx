@page
@model MessageManager.Pages_Series.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Series</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Series.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Series.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Series.Messages)
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach(var item in @Model.Series.Messages)
                {
                    <li>    
                        <a class="btn btn-light" asp-page="/Message/Details" asp-route-id="item.Id" role="button">@item.Title</a>
                    </li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Series.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
