@page
@model MessageManager.Pages.Notes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Notes[0].Url)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes[0].Message)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Notes) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Url)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message.Title)
            </td>
            <td>
                <partial name="_EditLink" model="new { Id = @item.Id, User = @User }">
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a>
                <partial name="_DeleteLink" model="new { Id = @item.Id, User = @User }">
            </td>
        </tr>
}
    </tbody>
</table>
