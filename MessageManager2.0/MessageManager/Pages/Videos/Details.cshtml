@page
@model MessageManager.Pages.Videos.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Video</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Video.YouTubeVideoId)
        </dt>
        <dd class="col-sm-10">
            <a class="btn btn-light" href="https://youtu.be/@Model.Video.YouTubeVideoId">
                @Html.DisplayFor(model => model.Video.YouTubeVideoId)</a>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Video.MessageStartTimeString)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Video.MessageStartTimeString)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Video.Message)
        </dt>
        <dd class="col-sm-10">
            <a class="btn btn-light" asp-page="/Messages/Details" asp-route-id="@Model.Video.MessageId"
                role="button">@Model.Video.Message.Title</a>
        </dd>
    </dl>
    <iframe width="1280" height="720"
        src="https://www.youtube.com/embed/@(Model.Video.YouTubeVideoId)?start=@(Model.Video.MessageStartTimeSeconds)"
        title="@Model.Video.Message.Title" frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen></iframe>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Video.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
